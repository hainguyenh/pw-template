{
  "name": "pw-os",
  "version": "0.1.0",
  "description": "",
  "author": {
    "name": "Hai Nguyen",
    "email": "hainguyen.nth11@gmail.com",
    "phone": "84901023848"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "validate": "tsc --noEmit",
    "ready": "rimraf dist node_modules package-lock.json && npm i",
    "test": "playwright test",
    "lint": "cross-env eslint 'src/**/*.ts' 'playwright.config.ts' '.eslintrc.js'",
    "ui": "playwright test --ui",
    "test:local": "ALLURE_RESULTS_DIR=test-results/rc/jsons ENV=rc npx playwright test --headed --project='PoC - OS with Playwright'",
    "test:all": "ALLURE_RESULTS_DIR=test-results/rc/jsons ENV=rc npx playwright test --headed --project='PoC - OS with Playwright'",
    "report": "allure generate ./test-results/rc/jsons --clean -o ./test-results/rc/html && allure open ./test-results/rc/html",
    "prepare": "husky",
    "postinstall": "playwright install chromium"
  },
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.45.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/node": "^20.12.12",
    "tslib": "^2.6.2",
    "typescript": "5.4.5",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.6",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "moment-timezone": "^0.5.45",
    "winston": "^3.13.0",
    "allure-playwright": "^2.15.1",
    "allure-commandline": "^2.29.0",
    "husky": "^9.0.11",
    "rimraf": "^5.0.7",
    "cross-env": "^7.0.3",
    "axios": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,ts}": [
      "cross-env prettier --write"
    ],
    "*.{ts}": [
      "cross-env eslint --fix"
    ]
  }
}
